{
  "name": "email-validator",
  "version": "0.1.0",
  "description": "Validates emails based on regex, common typos, disposable email blacklists, DNS records and SMTP server response.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfbx9da4/email-validator"
  },
  "author": "David Alberto Adler",
  "license": "MIT",
  "scripts": {
    "start": "yarn serve",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "watch-node": "nodemon dist/index.js",
    "test": "jest --verbose",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "yarn build && yarn watch-debug",
    "run-debug": "nodemon --inspect dist/server.js"
  },
  "dependencies": {
    "@types/mailcheck": "^1.1.31",
    "@types/validator": "^12.0.1",
    "axios": "^0.19.2",
    "lodash": "^4.17.15",
    "mailcheck": "^1.1.1",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.141",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.8.3"
  }
}
